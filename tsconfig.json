{
    "compilerOptions": {
        "lib": [ "es2015" ],
        "module": "commonjs",
        "experimentalDecorators": true,
        "allowJs": true,
        "esModuleInterop": true,
        "target": "es5",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": false,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ]
}